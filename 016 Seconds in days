/* Exercise description 

Create a program, which asks user for amount of days, and prints the total amount of seconds for that amount of days, gives the answer and quits.

Example print:

How many days?
> 2
172800

How many days?
> 7
604800    */

//Solution

namespace Exercise016
{
    using System;
    public class Program
    {
        public static void Main(string[] args)
        {
            Console.WriteLine("How many days?");
            int days = int.Parse(Console.ReadLine());

            // There are 86400 seconds in a day (24 hours * 60 minutes * 60 seconds)
            int seconds = days * 86400;

            Console.WriteLine(seconds);
        }
    }
}
